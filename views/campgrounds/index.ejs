<% include ../partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <h1>Campgrounds</h1> 
        <p>find the location of your dream!</p>
        <p>
            <a class="btn btn-info btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <h3 class="col-md-12">Our Most Popular Campgrounds</h3>
    
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6"> 
                <div class="card" style="margin-bottom: 20px;">
                    <img src="<%=campground.img%>" class="card-img-top"> 
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a class="btn btn-info btn-md" href="/campgrounds/<%=campground._id%>">View Details</a>
                    </div>    
                </div>
            </div>
        <% }); %>
    </div>
    
</div>
<% include ../partials/footer %>