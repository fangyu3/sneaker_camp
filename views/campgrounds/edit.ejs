<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 class="col-sm-12" style="text-align:center;">Edit Campground - <%= foundCampground.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= foundCampground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="inputName">Campground name:</label>
                    <input class="form-control" id="inputName" type="text" name="campground[name]" value="<%=foundCampground.name%>" required>
                </div>
                
                <div class="form-group">
                    <label for="inputURL">Campground image URL:</label>
                    <input class="form-control" id="inputURL" type="text" name="campground[img]" value="<%=foundCampground.img%>" required>
                </div>
                
                <div class="form-group">
                    <label for="inputDesc">Campground description:</label>
                    <input class="form-control" id="inputDesc" type="text" name="campground[description]" value="<%=foundCampground.description%>"required>
                </div>
                
                <button class="btn btn-success btn-lg btn-block">Submit</button>
            </form>
            <a href="/campgrounds/<%=foundCampground._id%>">Go Back</a>
        </div>
    </div>
</div>
<%include ../partials/footer%>